+static int rt2860v2_probe(const char *ifname)
+{
+	struct iwreq wrq;
+	char buf[256];
+
+	if(rt2860v2_ioctl(ifname, SIOCGIWNAME, &wrq) >= 0)
+	{
+		return (strncmp(wrq.u.name,"RTWIFI SoftAP",13)==0);
+	}
+	return 0;
